# ========================================
# Alpha Sniper V4.2 - LIVE TRADING MODE
# ========================================
# ⚠️  WARNING: THIS CONFIGURATION TRADES WITH REAL MONEY! ⚠️
# ========================================
# Double-check ALL parameters before deploying
# Test thoroughly in SIM mode first
# Start with small position sizes
# ========================================

# === TRADING MODE ===
# MUST be false for LIVE mode
SIM_MODE=false
SIM_DATA_SOURCE=LIVE_DATA  # Ignored in live mode, but keep for consistency
STARTING_EQUITY=1000  # Initial equity or fetched from MEXC

# === TELEGRAM NOTIFICATIONS ===
# REQUIRED for LIVE mode - you need alerts!
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_CHAT_ID_HERE

# === MEXC API KEYS ===
# ⚠️  REQUIRED for LIVE mode
# Generate from: https://www.mexc.com/user/openapi
# Ensure API key has spot trading permissions
MEXC_API_KEY=YOUR_LIVE_API_KEY_HERE
MEXC_SECRET_KEY=YOUR_LIVE_SECRET_KEY_HERE

# === SAFETY & RISK ===
# Start conservative and increase gradually
MAX_PORTFOLIO_HEAT=0.008  # Lower than SIM for safety
MAX_CONCURRENT_POSITIONS=3  # Start with fewer positions
MAX_SPREAD_PCT=0.5  # Tighter spread limit for live
ENABLE_DAILY_LOSS_LIMIT=true  # ALWAYS true in live!
MAX_DAILY_LOSS_PCT=0.02  # 2% daily loss limit
EXCHANGE_OUTAGE_GRACE_MINUTES=30

# === REGIME RISK % ===
# Conservative risk per trade for live mode
RISK_PER_TRADE_BULL=0.0015  # 0.15% per trade
RISK_PER_TRADE_SIDEWAYS=0.0015
RISK_PER_TRADE_MILD_BEAR=0.0010
RISK_PER_TRADE_DEEP_BEAR=0.0008

# === PUMP ENGINE ===
PUMP_ENGINE_ENABLED=true
PUMP_RISK_PER_TRADE=0.0008  # Lower risk for pumps in live
PUMP_ALLOCATION_MIN=0.15
PUMP_ALLOCATION_MAX=0.25
PUMP_MAX_CONCURRENT=1  # Only 1 pump position at a time initially

# === GLOBAL FILTERS ===
MIN_SCORE=85  # Higher minimum score for live
MIN_24H_QUOTE_VOLUME=100000  # Higher liquidity requirement
MAX_FUNDING_8H_SHORT=0.00035
SCAN_INTERVAL_SECONDS=180  # More frequent scans in live

# === V4.2 ADDITIVE OVERLAYS ===
SIDEWAYS_COIL_ENABLED=true
SIDEWAYS_COIL_ATR_MULT=1.5
SIDEWAYS_RSI_DIVERGENCE_ENABLED=true
SIDEWAYS_COIL_SCORE_BOOST=10

SHORT_FUNDING_OVERLAY_ENABLED=true
SHORT_MIN_FUNDING_8H=0.00025

PUMP_FEEDBACK_ENABLED=true
PUMP_FEEDBACK_LOOKBACK=20
PUMP_FEEDBACK_LOW_R_THRES=0.5
PUMP_FEEDBACK_HIGH_R_THRES=1.0

LIQUIDITY_SIZING_ENABLED=true
LIQUIDITY_SPREAD_SOFT_LIMIT=0.5  # Stricter for live
LIQUIDITY_DEPTH_GOOD_LEVEL=30000  # Higher for live
LIQUIDITY_MIN_FACTOR=0.4  # More conservative

CORRELATION_LIMIT_ENABLED=true
MAX_CORRELATED_POSITIONS=2

# === DYNAMIC FILTER ENGINE ===
DFE_ENABLED=false  # Consider enabling after initial live testing

# === FAST STOP MANAGER ===
POSITION_CHECK_INTERVAL_SECONDS=15  # Check stops every 15s
MIN_STOP_PCT_CORE=0.025  # Slightly wider stops for live execution
MIN_STOP_PCT_BEAR_MICRO=0.07
MIN_STOP_PCT_PUMP=0.10

# === ENTRY-DETE (Smart Entry Timing) ===
ENTRY_DETE_ENABLED=true  # Recommended for live mode
ENTRY_DETE_MAX_WAIT_SECONDS=120
ENTRY_DETE_MIN_TRIGGERS=2
ENTRY_DETE_MIN_DIP_PCT=0.005
ENTRY_DETE_MAX_DIP_PCT=0.015
ENTRY_DETE_VOLUME_MULTIPLIER=1.1

# === PUMP-ONLY MODE ===
# Set to true if you want to trade only pumps
PUMP_ONLY_MODE=false
PUMP_MIN_24H_RETURN=0.80
PUMP_MAX_24H_RETURN=3.00  # More conservative range
PUMP_MIN_RVOL=3.0  # Higher requirement for live
PUMP_MIN_MOMENTUM_1H=45
PUMP_MIN_24H_QUOTE_VOLUME=1000000  # Higher liquidity for live
PUMP_MIN_SCORE=90  # Higher score requirement
PUMP_MAX_HOLD_HOURS=3  # Shorter hold time for live

# === PUMP ATR TRAILING STOP ===
PUMP_TRAIL_INITIAL_ATR_MULT=2.5  # Wider initial stop for live
PUMP_TRAIL_ATR_MULT=1.5  # Wider trailing distance
PUMP_TRAIL_START_MINUTES=30
